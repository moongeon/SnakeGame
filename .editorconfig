root = true

[*.{kt,kts}]
# 코드의 기본 들여쓰기를 4칸으로 설정합니다.
indent_size = 4

# 코드가 여러 줄로 이어질 경우, 추가 줄의 들여쓰기도 4칸으로 설정합니다.
continuation_indent_size = 4

# 한 줄의 최대 길이를 150자로 제한합니다.
max_line_length = 150


# 규칙을 비활성화합니다.
import-ordering = disabled
function-naming = disabled
no-comment-in-value-argument = disaabled
ktlint_standard_backing-property-naming = disabled
ktlint_standard-property-naming = disabled

# 이는 주로 Jetpack Compose에서 사용되며, @Composable로 어노테이션 경우 규칙을 무시합니다.
ktlint_function_naming_ignore_when_annotated_with = Composable

# value_argument_list에서 한 줄 주석 무시 규칙 추가
ktlint_experimental_rules_enabled = true